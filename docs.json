{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Flowxi Docs",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/public/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Get started",
        "groups": [
          { "group": "Overview", "pages": ["index", "introduction"] },
          {
            "group": "Authentication",
            "pages": ["auth/overview", "auth/registration", "auth/login", "auth/2fa"]
          },
          {
            "group": "User",
            "pages": ["user/me"]
          },
          { "group": "Errors", "pages": ["errors/index"] },
          { "group": "Localization", "pages": ["localization/index"] }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoints",
            "openapi": "api-reference/openapi.yaml"
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/public/logo/light-2.png",
    "dark": "/public/logo/dark-2.png"
  },
  "navbar": {
    "links": [{ "label": "Support", "href": "mailto:support@flowxi.app" }]
  },
  "contextual": { "options": ["copy", "view"] },
  "footer": { "socials": { "github": "https://github.com/flowxi" } }
}
